    <form id="new-form" action="/register" method="POST">
        <h1 id="new-title">Sign Up and Enjoy Your Polls!</h1>
        <div class="form-group">
            <input class="form-control" type="text" name="username" placeholder="Enter a beautiful username">
        </div>
        <div class="form-group">
            <input class="form-control" type="password" name="password" placeholder="Enter a strong password">
        </div>
        <div class="form-group">
            <input value="Sign Up" class="form-control btn btn-primary btn-block" type="submit">
        </div>
    
    
</form>
</div>



