<% include ./partials/header %>


<div class="container">
    <form id="new-form" action="/polls" method="POST">
        <h1 id="new-title">Create a new poll buddy!</h1>
        <div class="form-group">
            <input class="form-control" type="text" name="polls[title]" placeholder="What is your question?">
        </div>
        <div class="form-group">
            <textarea rows="7" id="new-options" class="form-control" name="polls[options]">Write your options and seperate them with new line</textarea>
        </div>
        <div class="form-group">
            <input class="form-control btn btn-primary btn-block" type="submit">
        </div>
    
    
</form>
</div>



